<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/getpermisstion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="7dp"
            android:text="获取权限"
            android:clickable="true"
            android:textColor="@color/hot_picture_subject_name"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/titletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SIS-SDK Demo"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp_22" />
        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:text="设置"
            android:clickable="true"
            android:textColor="@color/hot_picture_subject_name"
            android:textSize="20sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/lines"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/top"
        android:background="@color/c_aaabab" />

    <LinearLayout
        android:layout_below="@+id/lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/setconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:text="设备未连接，点击进行连接"
            android:clickable="true"
            android:textColor="@color/hot_picture_subject_name"
            android:textSize="20sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            >
            <Button
                android:id="@+id/autosingle"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_redcoler"
                android:text="自动积分单次测"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <Button
                android:id="@+id/gudingsingle"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/button_redcoler"
                android:layout_toRightOf="@id/autosingle"
                android:text="固定积分单次测"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            >
            <Button
                android:id="@+id/autocontinu"
                android:layout_width="150dp"
                android:layout_height="45dp"

                android:layout_marginEnd="20dp"
                android:background="@drawable/button_redcoler"
                android:text="自动积分连续测"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <Button
                android:id="@+id/gudingcontinu"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/button_redcoler"
                android:layout_toRightOf="@id/autocontinu"
                android:text="固定积分连续测"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>